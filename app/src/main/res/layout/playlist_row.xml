<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#63AAE3">

    <ImageView
        android:id="@+id/playlistImage"
        android:layout_width="107dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/titlePlaylist2"
        android:layout_width="44dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:text="Title:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/playlistImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userOwner2"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:text="User Owner:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/playlistImage"
        app:layout_constraintTop_toBottomOf="@+id/titlePlaylist2" />

    <TextView
        android:id="@+id/numberTracks2"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:text="Number of Tracks:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playlistImage"
        app:layout_constraintTop_toBottomOf="@+id/userOwner2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/titlePlaylist"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/titlePlaylist2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userOwner"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/userOwner2"
        app:layout_constraintTop_toBottomOf="@+id/titlePlaylist" />

    <TextView
        android:id="@+id/numberTracks1"
        android:layout_width="130dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/numberTracks2"
        app:layout_constraintTop_toBottomOf="@+id/userOwner" />
</androidx.constraintlayout.widget.ConstraintLayout>